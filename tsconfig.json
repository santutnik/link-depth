{
    "compilerOptions": {
        "target": "es2016",
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["jest"]
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "test/**/*.ts", "jest.config.ts"]
}
